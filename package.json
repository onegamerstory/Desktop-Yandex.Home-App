{
  "name": "yandex-smart-home-control",
  "private": true,
  "version": "1.1.0",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "electron-dev": "node electron-wait-for-vite.js",
    "build": "vite build",
    "dist": "npm run build && electron-builder",
    "preview": "vite preview"
  },
  "dependencies": {
    "keytar": "^7.9.0",
    "lucide-react": "^0.555.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@types/keytar": "^4.4.0",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "electron": "^39.2.4",
    "electron-builder": "^25.1.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  },
  "build": {
    "appId": "com.onegamerstory.smarthomecontrol",
    "productName": "Yandex Smart Home Control",
	"artifactName": "${productName} Setup v${version}.${ext}",
	"icon": "resources/icon.png",
    "files": [
		"dist/**/*",        
		"main.js",          
		"preload.cjs",      
		"yandex-api.js",    
		"node_modules/**/*"
	],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis",
	  "icon": "resources/icon.ico"
    },
    "mac": {
      "target": "dmg",
	  "icon": "resources/icon.icns"
    }
  }
}
